[Unit]
Description=Apache Brooklyn Service
Documentation=https://brooklyn.apache.org/documentation/index.html

[Service]
WorkingDirectory=/opt/brooklyn/bin/
ExecStart=/opt/brooklyn/bin/brooklyn launch --localBrooklynProperties /etc/brooklyn/brooklyn.conf
Type=forking
PIDFile=/var/run/brooklyn/brooklyn.pid
Restart=always
User=brooklyn
Group=brooklyn

[Install]
WantedBy=multi-user.target
